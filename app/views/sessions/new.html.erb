<div class="row">

<div class="col-lg-12">
    <div class="container jumbotron">
        <div class="row col-lg-12">
        
            <div class="col col-lg-6">
            <img src="https://images-wixmp-ed30a86b8c4ca887773594c2.wixmp.com/f/4252f013-3acb-46e7-beb8-ebe01d64e82d/dcsiair-d80469c7-f0b6-4853-af03-f43b7523083d.jpg?token=eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9.eyJzdWIiOiJ1cm46YXBwOiIsImlzcyI6InVybjphcHA6Iiwib2JqIjpbW3sicGF0aCI6IlwvZlwvNDI1MmYwMTMtM2FjYi00NmU3LWJlYjgtZWJlMDFkNjRlODJkXC9kY3NpYWlyLWQ4MDQ2OWM3LWYwYjYtNDg1My1hZjAzLWY0M2I3NTIzMDgzZC5qcGcifV1dLCJhdWQiOlsidXJuOnNlcnZpY2U6ZmlsZS5kb3dubG9hZCJdfQ.57n7FV6Nr8sfpgz_8kPEw27dO1UScmWYyJfhRg-qDXQ" alt="" 
            style="
            width: auto;
            height: 620px;"
            class="img-responsive col-lg-12" >        
            </div>

            <div class="col col-lg-6">
                <div class="form content" style="padding-top: 130px">
               
                        <div class="container">
                            
                            <div class="form-group">
                             <h1 class="text-center">Login</h1>
                            <%= form_for(:session, url: sessions_path) do |f| %>
                                <div class="row">
                                <div class="col col-xs-6">
                                    <label for="session_email">Email</label>
                                    <%= f.text_field :email, class: "form-control", placeholder: "johndoe@email.com" %>
                                </div>

                                <div class="col col-xs-6">    
                                    <label for="session_password">Password</label>
                                    <%= f.password_field :password, class: "form-control", placeholder: "Password"%>
                                </div>

                                </div> <br/>
                                <div class="form-group">
                                    <%= f.label :remember_me, class: "checkbox inline" do %>
                                        <%= f.check_box :remember_me %>
                                        <span>Remember me on this computer</span>
                                    <% end %>
                                </div>
                                <div class="form-group">
                                <%= f.submit "Login", class: "btn btn-block btn-primary" %>
                                <%end%>
                                    <%# <input type="submit" name="commit" value="Login" class="btn btn-block btn-primary" data-disable-with="Login"> %>
                                </div>
                            </div>

                            </div>
                            
                            <p style="text-align:center"><br/>New here? <%= link_to "Sign up now!", signup_path, class: "text-success" %></p>
                        </div>
                    </div>
            </div> <!--row end-->

        </div>
    </div>

</div> 


</div>

</div> <!--Container End--> 
