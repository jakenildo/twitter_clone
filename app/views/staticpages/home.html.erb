<% provide(:title, 'Home') %>

<main role="main" class="container">
<div class="container col-lg-12"><!--Container Start-->

<div class="jumbotron welcome"> <!--Jumbotron Start-->
    <% if logged_in? %>
    <div class="container">
      <div class="col-lg-12">
          <div class="row">
            <div class="col-lg-3">
              <section>
              <%= render 'shared/user_info'%>
              </section>
              <section>
              <%= render 'shared/micropost_form'%>
              </section>
            </div>
            <!-- Microposts -->

            <div class="col-lg-9">
              <h3><i class="fa fa-newspaper"></i> Micropost Feed</h3>
              <div class="newsfeed">
              <%= render 'shared/feed' %>
              </div>
            </div>
          </div>
      </div>
    </div>

    <% else %>
    <div class="container">
      <h1 class="display-3">Awesome Blog!</h1>
      <p>Hello World! This is Awesome Blog!</p>
      <div style="width:100%;height:0;padding-bottom:56%;position:relative;">
      <iframe src="https://giphy.com/embed/jxsR1JhrmmeUE" width="100%" height="100%" style="position:absolute" frameBorder="0" class="giphy-embed" allowFullScreen></iframe></div>
    </div>
    <% end %>
</div><!--Jumbotron End-->

</div> <!--Container End--> 
</main>


