<% provide(:title, "Users list") %>


<main role="main" class="container">
<div class="container col-lg-12"><!--Container Start-->
    <div class="jumbotron welcome"> <!--Jumbotron Start-->
        <h1 class="text-center"><i class='far fa-user-circle'></i> List of users <i class='far fa-user-circle'></i> </h1>
        <div class="offset-lg-3">
            
            <%= will_paginate %>
            <div class="container ">
            <ul class="users">
                <% @users.each do |user| %>
                    <li>
                        <%= gravatar_for user, size: 52 %>
                        <%= link_to user.name, user %>
                        <%= link_to raw("<i class='fa fa-trash-alt'></i> "), user_path(user), method: :delete, data: { confirm: "You sure you want to remove user?" } %>

                    </li>
                <% end %>
            </ul>

            </div>
            <%= will_paginate %>
        </div><!-- Offset end -->

    </div> <!--Jumbotron End-->


</div> <!--Container End--> 
</main>