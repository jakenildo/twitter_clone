<li>
    <div class="col-lg-12 feed-item">
        <div class="row">
            <div class="col">

                <div class="row">

                    <div class="col-xl-2 d-flex justify-content-center">
                        <div style="padding-top: 15px;">
                            <%= link_to gravatar_for(feed_item.user), feed_item.user %>
                        </div>
                    </div>

                    <div class="col">
                        <div class="row">
                            <div class="col-xl-3">
                                <span id="user">
                                    <%= link_to feed_item.user.name, feed_item.user %>
                                </span>
                            </div>
                            
                            <div class="col">
                                <span class="timestamp">
                                    <i class="far fa-clock" style="regular"></i> Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
                                </span>
                            </div>
                        </div>
                        <div class="row">
                            <h4> <%= feed_item.content %> </h4>
                            
                            <%= image_tag feed_item.image , :class => "col-lg-12" if feed_item.image.attached? %>

                        </div>

                        <div class="row">
                            <%= pluralize(feed_item.likes.count, "like") %>
                        </div>

                        <div class="row">
                        
                            <span class="like">   
                                <%= link_to raw("<i class='far fa-heart'></i>"), like_micropost_path(feed_item) %> 
                                <% if (feed_item.likes.count >= 1)  %> 
                                <%= link_to raw("<i class='fa fa-heart-broken'></i>"), dislike_micropost_path(feed_item) %>
                                <% else %>
                                <a href="" class="isDisabled" disabled><i class='fa fa-heart-broken'></i><a>
                                <% end %>

                                <% if current_user?(feed_item.user) %>
                                <%= link_to raw("<i class='fa fa-trash'></i>"), feed_item, method: :delete,
                                data: { confirm: "Are you sure?" },
                                title: feed_item.content %>
                                <% end %>
                                <br>
                            </span>
                        </div>

                    </div>

                </div>

             
            </div>
        </div>
    </div>
</li>